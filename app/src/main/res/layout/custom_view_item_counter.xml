<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_counter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/themPrimaryDark"
            android:src="@drawable/ic_book_open_page_variant_white_48dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_item_counter_count_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="4"/>

            <TextView
                android:id="@+id/tv_item_counter_count_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="3dp"
                android:text="(4)"/>

            <ImageView
                android:id="@+id/iv_item_counter_count_indicator"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_keyboard_arrow_left_white_48"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
