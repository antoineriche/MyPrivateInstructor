<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/preferences_tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:text="@string/pref_course_end"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/preferences_switch"/>

    <TextView
        android:id="@+id/preferences_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pref_course_end"
        android:layout_toStartOf="@+id/preferences_switch"
        android:layout_below="@+id/preferences_tv_label"/>

    <Switch
        android:id="@+id/preferences_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
