<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navigate through weeks -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/themPrimaryDark">

        <ImageView
            android:id="@+id/iv_previous_month"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_keyboard_arrow_left_white_48"
            android:tint="@color/unthemAccent"
            android:background="@color/them800"/>

        <ImageView
            android:id="@+id/iv_next_month"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_keyboard_arrow_right_white_48"
            android:tint="@color/unthemAccent"
            android:background="@color/them800"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_next_month"
            android:layout_toEndOf="@+id/iv_previous_month"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Octobre 2016"
                android:layout_gravity="center" />

            <RelativeLayout
                android:id="@+id/ll_calendar_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_course_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unthemAccent"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ll_separator"
                    android:text="12 cours"/>

                <LinearLayout
                    android:id="@+id/ll_separator"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="5dp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_devoir_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unthemAccent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ll_separator"
                    android:text="0 devoir"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <!-- Day labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/them600"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Lu."
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ma."
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Me."
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Je"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ve"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sa."
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Di."
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_month_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>