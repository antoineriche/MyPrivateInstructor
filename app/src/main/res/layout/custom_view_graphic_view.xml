<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id="@+id/tv_graphic_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:padding="@dimen/vertical_lv_margin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Graphic title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="horizontal"
        android:padding="@dimen/vertical_lv_margin"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/ll_graphic_y_axe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/grey200"
            android:layout_weight="10"/>

        <RelativeLayout
            android:id="@+id/ll_graphic_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_graphic_extras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/lv_inter_margin"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_graphic_legend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:padding="@dimen/vertical_lv_margin"
        android:textStyle="bold"
        android:text="Graphic legend"
        android:textColor="@color/black"/>

</LinearLayout>