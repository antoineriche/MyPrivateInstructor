<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/horizontal_lv_margin"
    android:layout_marginTop="@dimen/vertical_lv_margin">

    <LinearLayout
        android:id="@+id/ll_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/themPrimaryDark"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/unthemAccent"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="02"/>

            <TextView
                android:id="@+id/tv_day_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/unthemAccent"
                android:textSize="12dp"
                android:text="Nov."/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_course_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_day_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="18h00 - 19h30 : Emile Roux"
                android:textColor="@color/black"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>